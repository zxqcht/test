#include<stdio.h>
int main()
{
	int n,i,m,a,b=0,c=0,d=0;
	scanf("%d",&n);
	i=n;
	while(i>=n)
	{
		m=i;
		b=0;
		while(m!=0)
		{
			a=m%10;
			if(a!=4&&a!=7)
			{
				b=b+1;
			} 
			if(a==4)
			{
				c=c+1;
			}
			if(a==7)
			{
				d=d+1;
			}
			m=m/10;
		}
		if(b!=0)
		{
			c=0;
			d=0;
		}
		if(b==0)
		{
			if(c==d)
			{
				printf("%d",i);
				break;
			}
		}
		i=i+1;
	}
	return 0;
 }
