	c=strlen(n);
	h=atoi(n);
	if(n[0]=='0'){
		printf("n前不能出现0");
	}
	else{
	   if(c%2==0){
	     for(i=0;i<(c/2);i++){
	    	m[i]=4;
		}
		 for(j=(c/2);j<c;j++){
		 	m[j]=7;
		 }//赋值 
		 
