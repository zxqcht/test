			}
	        for(j=(c+2)/2;j<c+2;j++){
	   	       m[j]=7;
	        }
	        for(i=0;i<c+2;i++){
	   	      printf("%d",m[i]);
	        }
		  }
	   }
	  
	  
	   if(c%2!=0){
	   	 for(i=0;i<(c+1)/2;i++){
	   	 	m[i]=4;
			}
	     for(j=(c+1)/2;j<c+1;j++){
	   	    m[j]=7;
	   }//赋值 
	     for(i=0;i<c+1;i++){
	   	    printf("%d",m[i]);
	   }
	  }
  }
}  
